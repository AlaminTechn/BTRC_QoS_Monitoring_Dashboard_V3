FROM python:3.10-slim

# Install required packages
RUN pip install --no-cache-dir requests==2.31.0

# Copy initialization scripts
COPY init_metabase_users.py /scripts/init_metabase_users.py
COPY docker/init-users.sh /scripts/init-users.sh

# Make scripts executable
RUN chmod +x /scripts/init-users.sh /scripts/init_metabase_users.py

WORKDIR /scripts

# Run initialization
CMD ["/scripts/init-users.sh"]
